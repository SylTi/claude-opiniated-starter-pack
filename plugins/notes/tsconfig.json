{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@saas/plugins-core": [
        "../../packages/plugins-core/dist/index.d.ts",
        "../../packages/plugins-core/src/index.ts"
      ],
      "@saas/plugins-core/*": [
        "../../packages/plugins-core/dist/*",
        "../../packages/plugins-core/src/*"
      ],
      "@saas/shared": [
        "../../packages/shared/dist/index.d.ts",
        "../../packages/shared/src/index.ts"
      ],
      "@saas/shared/*": [
        "../../packages/shared/dist/*",
        "../../packages/shared/src/*"
      ],
      "@saas/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@saas/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
