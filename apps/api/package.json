{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=15000 node ace serve --hmr",
    "test": "node ace test",
    "test:coverage": "c8 node ace test",
    "test:coverage:unit": "c8 node ace test unit",
    "test:coverage:functional": "c8 node ace test functional",
    "lint": "eslint .",
    "lint:test-rules": "node eslint-rules/no-unsafe-query-builder-writes.test.js",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "db:migration": "node ace migration:run",
    "db:reset": "node ace migration:fresh",
    "db:seed": "node ace db:seed --files=database/seeders/database_seeder.ts"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#constants/*": "./app/constants/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#utils/*": "./app/utils/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.18",
    "@types/qrcode": "^1.5.6",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "sinon": "^21.0.1",
    "supertest": "^7.1.4",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.1.1",
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/limiter": "^2.4.0",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/session": "^7.6.0",
    "@adonisjs/shield": "^8.2.0",
    "@authenio/samlify-xsd-schema-validator": "^1.0.5",
    "@aws-sdk/client-s3": "^3.978.0",
    "@lemonsqueezy/lemonsqueezy.js": "^4.0.0",
    "@paddle/paddle-node-sdk": "^3.6.0",
    "@polar-sh/sdk": "^0.42.5",
    "@saas/config": "workspace:*",
    "@saas/plugins-core": "workspace:*",
    "@saas/shared": "workspace:*",
    "@vinejs/vine": "^3.0.1",
    "jose": "^6.1.3",
    "luxon": "^3.7.2",
    "openid-client": "^6.8.1",
    "otplib": "^12.0.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.6.0",
    "samlify": "^2.10.2",
    "stripe": "^20.1.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "c8": {
    "include": [
      "app/**/*.ts"
    ],
    "exclude": [
      "app/**/*.spec.ts",
      "tests/**/*"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "coverage"
  }
}
