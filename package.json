{
  "name": "saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run plugins:build && pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm --filter web run typecheck && pnpm --filter api run typecheck",
    "test": "pnpm -r run test",
    "test:setup": "bash scripts/test-setup.sh",
    "docker:test:up": "docker-compose up -d postgres-test",
    "docker:test:down": "docker-compose down postgres-test",
    "docker:test:reset": "docker-compose down -v postgres-test && docker-compose up -d postgres-test",
    "packages:build": "pnpm --filter @saas/shared run build && pnpm --filter @saas/plugins-core run build && pnpm --filter @saas/config run build",
    "shared:build": "pnpm --filter @saas/shared run build",
    "config:build": "pnpm --filter @saas/config run build",
    "plugins-core:build": "pnpm --filter @saas/plugins-core run build",
    "plugins:build": "pnpm --filter './plugins/*' run build",
    "web:dev": "pnpm --filter web run dev",
    "api:dev": "pnpm --filter api run dev",
    "web:build": "pnpm --filter web run build",
    "api:build": "pnpm --filter api run build",
    "web:test": "pnpm --filter web run test",
    "web:test:coverage": "pnpm --filter web run test:coverage",
    "api:test": "pnpm --filter api run test",
    "api:test:coverage": "pnpm --filter api run test:coverage",
    "web:e2e": "pnpm --filter web run e2e",
    "web:e2e:ui": "pnpm --filter web run e2e:ui",
    "web:e2e:headed": "pnpm --filter web run e2e:headed",
    "web:e2e:install": "pnpm --filter web run e2e:install",
    "web:e2e:report": "pnpm --filter web run e2e:report",
    "prepare": "husky",
    "db:test": "NODE_ENV=test pnpm --filter api db:reset && NODE_ENV=test pnpm --filter api db:seed",
    "db:dev": "pnpm --filter api db:reset && pnpm --filter api db:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter web exec eslint --fix"
    ],
    "apps/api/**/*.{js,ts}": [
      "pnpm --filter api exec eslint --fix"
    ]
  }
}
