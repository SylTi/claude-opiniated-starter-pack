{
  "name": "saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev --ui tui",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck --filter=web --filter=api",
    "test": "turbo test",
    "test:setup": "bash scripts/test-setup.sh",
    "docker:test:up": "docker-compose up -d postgres-test",
    "docker:test:down": "docker-compose down postgres-test",
    "docker:test:reset": "docker-compose down -v postgres-test && docker-compose up -d postgres-test",
    "web:dev": "turbo dev --filter=web",
    "api:dev": "turbo dev --filter=api",
    "web:build": "turbo build --filter=web",
    "api:build": "turbo build --filter=api",
    "web:test": "turbo test --filter=web",
    "web:test:coverage": "pnpm --filter web run test:coverage",
    "api:test": "turbo test --filter=api",
    "api:test:coverage": "pnpm --filter api run test:coverage",
    "web:e2e": "turbo e2e --filter=web",
    "web:e2e:ui": "pnpm --filter web run e2e:ui",
    "web:e2e:headed": "pnpm --filter web run e2e:headed",
    "web:e2e:install": "pnpm --filter web run e2e:install",
    "web:e2e:report": "pnpm --filter web run e2e:report",
    "prepare": "husky",
    "db:test": "NODE_ENV=test pnpm --filter api db:reset && NODE_ENV=test pnpm --filter api db:seed",
    "db:dev": "pnpm --filter api db:reset && pnpm --filter api db:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "turbo": "^2.8.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter web exec eslint --fix"
    ],
    "apps/api/**/*.{js,ts}": [
      "pnpm --filter api exec eslint --fix"
    ]
  }
}
