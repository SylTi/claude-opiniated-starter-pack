{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "@saas/plugins-core": ["../plugins-core/dist/index.js"],
      "@saas/plugins-core/*": ["../plugins-core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
